<widget_description>

    <pawsCharDescription name="DescriptionEdit" visible="yes" savepositions="no" movable="yes" keepaspect="no" resizable="yes" configurable="yes" style="New Standard GUI">

        <frame x="100" y="100" width="320" height="267" border="no" />
        <minframe width="250" height="250" />
        <title resource="Scaling Title Bar" text="Modify description" align="left" close_button="yes" />

        <pawsTextBox name="lbl">
            <frame x="10" y="0" width="200" height="20" border="no" style="Main Header Font" />
            <text string="Character description:" />
            <attachpoints>
                <attach point="ATTACH_LEFT" />
                <attach point="ATTACH_TOP" />
            </attachpoints>
        </pawsTextBox>

        <pawsMultilineEditTextBox name="Description">
            <frame x="3" y="25" width="314" height="205" border="no" />
            <attachpoints>
                <attach point="ATTACH_RIGHT" />
                <attach point="ATTACH_TOP" />
                <attach point="ATTACH_LEFT" />
                <attach point="ATTACH_BOTTOM" />
            </attachpoints>
        </pawsMultilineEditTextBox>

        <pawsButton name="OK" id="100" style="Scaling Button">
            <frame x="3" y="243" width="65" height="20" />
            <attachpoints>
                <attach point="PROPORTIONAL_RIGHT" />
                <attach point="ATTACH_LEFT" />
                <attach point="ATTACH_BOTTOM" />
            </attachpoints>
            <label text="OK" />
        </pawsButton>

        <pawsButton name="Cancel" id="101" style="Scaling Button">
            <frame x="80" y="243" width="65" height="20" />
            <attachpoints>
                <attach point="PROPORTIONAL_RIGHT" />
                <attach point="PROPORTIONAL_LEFT" />
                <attach point="ATTACH_BOTTOM" />
            </attachpoints>
            <label text="Cancel" />
        </pawsButton>

        <pawsButton name="Save" id="102" style="Scaling Button">
            <frame x="164" y="243" width="65" height="20" />
            <attachpoints>
                <attach point="PROPORTIONAL_RIGHT" />
                <attach point="PROPORTIONAL_LEFT" />
                <attach point="ATTACH_BOTTOM" />
            </attachpoints>
            <label text="Store" />
        </pawsButton>

        <pawsButton name="Load" id="103" style="Scaling Button">
            <frame x="240" y="243" width="65" height="20" />
            <attachpoints>
                <attach point="PROPORTIONAL_RIGHT" />
                <attach point="PROPORTIONAL_LEFT" />
                <attach point="ATTACH_BOTTOM" />
            </attachpoints>
            <label text="Load" />
        </pawsButton>

    </pawsCharDescription>

</widget_description>
